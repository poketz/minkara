<% if @post.post_comments.present? %>
  <div>コメント　<%= @post_comments.count %></div>
  <div class="mt-2">
    <% @post_comments.each do |comment| %>
    <div>
      <%= image_tag comment.user.get_profile_image(50,50), class: "rounded-circle" %>
      <%= comment.user.name %>
      <span class="pl-3"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
      <span class="pl-4"><%= comment.body %></span>
      <% if comment.user == current_user %>
        <%= link_to "削除", post_post_comment_path(comment.post_id, comment.id), 
        method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
      <% end %>
    </div>
    <% end %>
  </div>
<% else %>
  <p>コメントはまだありません</p>
<% end %>
