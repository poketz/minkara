<div class="container">
  <% if params[:id] == current_user.id.to_s %>
  <div class="mt-3">
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <%= current_user.name %> さん
    <div>
      性別：<%= @user.gender_i18n %><br>
      年齢：<%= (Date.today.strftime('%Y%m%d').to_i - @user.birthday.strftime('%Y%m%d').to_i) / 10000 %>歳<br>
      地域：<%= @user.prefecture_i18n %>
    </div>
  </div>

  <div>
    <%= link_to '新規投稿', new_post_path %>
  </div>

  <h3 class="mt-3">投稿一覧</h3>
  <% @posts.each do |pos| %>
    <%= link_to post_path(pos.id), class: "text-dark text-decoration-none" do %>
      <div class="row border p-4 mt-2">
        <%= pos.song.song_name %> /
        <%= pos.song.artist_name %><br>
        <%= pos.poster_comment %>
      </div>
    <% end %>
  <% end %>

  <% else %>
  <h1>user</h1>
  <% end %>
</div>