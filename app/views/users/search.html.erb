<div class="container">
  <h4>ユーザー検索</h4>
  <div>
    <%= form_with url: search_users_path, model: @posts, method: :get do |f| %>
      <%= f.text_field :word, autocomplete: "off" %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= render 'shared/flash_message' %>

  <table class="table table-hover table-inverse">
    <tbody>
      <% @users.each do |user| %>

        <tr class="position-relative align-middle">
          <td><%= image_tag user.get_profile_image(75,75) %></td>
          <!-- stretched-linkで枠全体をリンクに-->
          <td class="align-middle"><%= link_to user_path(user.id), class: "stretched-link text-decoration-none text-dark" do %>
                <%= user.name %><% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>