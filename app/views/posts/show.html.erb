<div class="container d-flex">

  <div class="col-7">
    <div class="row m-0 align-items-center mt-3">
      <div class="mr-5 p-3 ">
        <div><%= image_tag @post.user.get_profile_image(100,100), class: "rounded-circle" %></div>
        <div class="mt-2 text-center"><%= link_to @post.user.name, user_path(@post.user_id) %></div>
      </div>
      <audio src= "<%= "#{@post.audio}" %>"controls="" class="offset-1"></audio>
    </div>

    <div class="rounded shadow bg-light border-dark p-4 mt-4">
      <div class="row m-0">
        <div class="mr-5 h5">
          <%= @post.song.song_name %> / <%= @post.song.artist_name %>
        </div>
        <div>
          <%= @post.created_at.strftime('%Y/%m/%d') %> 投稿
        </div>
      </div>
      
      <div class="mt-3 ml-2 d-inline-block">
        <%= @post.poster_comment %>
      </div>
      <div class="mt-2 ml-3 d-inline-block" id="likes">
        <% if current_user == @post.user || current_user.id == 7 %>
          <span class="pr-2"><%= icon("fas", "heart") %></span><%= @post.likes.count %>
        <% else %>
          <%= render "likes/like" %>
        <% end %>
      </div>
    </div>


    <div class="mt-5" id="comments_list">
      <%= render 'post_comments/comments_list' %>
    </div>
    <% unless current_user.id == 7 %>
      <div class="mt-3">
        <%= render 'post_comments/form' %>
      </div>
    <% end %>
  </div>

  <div class="col-4 offset-1">
    <h5 class="mb-3"><%= @post.song.artist_name %>のおすすめ投稿</h5>
    <% Post.post_recommend(current_user, @post, @post.song.artist_name).each do |pos| %>
      <div class="border rounded p-4 mt-2 position-relative">

        <div class="h6">
          <%= link_to post_path(pos.id), class: "text-dark text-decoration-none font-weight-bold stretched-link" do %>
            <%= pos.song.song_name %> /
            <%= pos.song.artist_name %>
          <% end %>
        </div>
        <div class="mb-2"><%= pos.created_at.strftime('%Y/%m/%d') %>投稿</div>

        <div>
          <%= pos.user.name %> さん
          <span class="pl-4">いいね <%= pos.likes.count %></span>
        </div>
      </div>
    <% end %>
  </div>




</div>