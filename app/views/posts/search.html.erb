<div class="container col-5 mx-auto">
  <h4>投稿検索</h4>
  <%= form_tag(search_posts_path, method: :get, class: "form-group form-inline mt-4") do %>
    <%= text_field_tag :word, params[:word], placeholder: "歌手名／曲名を入力", class: "form-control mr-3", size: 30 %>
    <%= select_tag :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]], { selected: params[:search] }), class: "form-control mr-3"  %>
    <%= submit_tag "検索", class: "btn btn-primary" %>
  <% end %>
  <%= render 'shared/flash_message' %>

      <% @posts.each do |pos| %>
        <div class="border rounded-lg bg-light p-4 mt-3 position-relative">
          <div class="row mx-0 justify-content-between ">
            <div class="h6">
              <%= link_to post_path(pos.id), class: "text-dark text-decoration-none stretched-link font-weight-bold" do %>
                <%= pos.song.song_name %> /
                <%= pos.song.artist_name %>
              <% end %>
            </div>
            <div><%= pos.created_at.strftime('%Y/%m/%d') %>投稿</div>
          </div>
          <%= pos.user.name %><br>
          <%= pos.poster_comment %><br>
            いいね <%= pos.likes.count %>

          <span class="pl-3">コメント <%= pos.post_comments.count %></span>
        </div>

      <% end %>
      <%= paginate @posts %>

</div>
